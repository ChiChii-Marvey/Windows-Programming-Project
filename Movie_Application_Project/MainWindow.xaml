<Window x:Class="Movie_Application_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movie_Application_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="570" Width="600">

    

    <StackPanel Orientation="Vertical" Width="600">
        <Button x:Name="Directors" Content="Directors" Click="DirectorBtn_Click" Margin="12" Width="100" Height=" 50"></Button>
        <Button x:Name="Movies" Content ="Movies" Click="MoviesBtn_Click"  Margin="12" Width="100"  Height=" 50"></Button>
        <Button x:Name="Actors" Content ="Actors" Click="ActorsBtn_Click" Margin="12" Width="100" Height=" 50"></Button>


        <Frame x:Name="mainFrame" Height="Auto" Width=" Auto" NavigationUIVisibility="Hidden"></Frame>

    </StackPanel>

</Window>
